{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-4">Votre panier</h1>
		{% if items %}
			<table class="table">
				<thead>
					<tr>
						<td>Produit</td>
						<td>Prix</td>
						<td>Quantité</td>
						<td>Total</td>
						<td class="text-center">Supprimer</td>

					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>{{item.produit.titre}}</td>
							<td>{{item.produit.prix}}</td>
							<td>{{item.quantite}}</td>
							<td>{{item.produit.prix * item.quantite}}€</td>
							<td class="text-center">
								<a href="{{path('cart_remove', {id:item.produit.id})}}" class="btn btn-danger">X</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
            <h5 class="text-end">Total : {{total}}€</h5>

		{% else %}
			<p>Votre panier est vide</p>
		{% endif %}

	</div>
{% endblock %}
